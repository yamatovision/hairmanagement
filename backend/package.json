{
  "name": "hairmanagement-backend",
  "version": "1.0.0",
  "description": "TypeScript Express.js API for Patrol Management",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec \"TS_NODE_TRANSPILE_ONLY=true ts-node -r tsconfig-paths/register src/index.ts\"",
    "dev:minimal": "nodemon minimal-server.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "test:subscription": "ts-node -r tsconfig-paths/register src/tests/subscription.test.ts",
    "test:api-endpoints": "node src/tests/api-endpoint-tests.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "lunar-javascript": "^1.7.1",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "typedi": "^0.10.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/uuid": "^10.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3"
  }
}
